$lime = #ccf528
$thumb_w = 50px
$thumb_h = 50px

body, html
  margin 0px
  font-family "Helvetica Neue", Helvetica, sans-serif 

button.sp-button, select, label.for-checkbox, a
  cursor pointer

.header
  width 100%
  height 60px
  background #1d1919 url(/header.png) center no-repeat

.content
  padding 1em

.thumb
  width $thumb_w
  height $thumb_h
  &.tiny
    width ($thumb_w / 2)
    height ($thumb_h / 2)

a.disabled
  opacity 0.5
  cursor auto
  font-weight normal
  &:hover
    text-decoration none

input[type="checkbox"]
  -webkit-appearance checkbox !important

ul.inline > li
  list-style-type none
  display inline-block

ul.results 
  > li
    margin 0.3em 0px
    vertical-align middle
    &:nth-child(odd)
      background-color: #DDD
  li 
    vertical-align middle
  li.track
    margin-left 1em
    width 25em
    a.track-link
      font-weight bold
  li.user 
    margin-left 1em
    > a
      color #0099cc
  .request-text
    opacity 0.9
    max-width 23em

#powerbar 
  border 1px solid #ddd
  padding 1em 
  overflow hidden

  a 
    font-weight bold

  .status
    float left
    vertical-align center
    
  .controls
    float right

  .new
    display none
  .subscribed
    display none
  .stopped
    display none 

  &.new-state
    background-color white
    .new 
      display block

  &.listen-state 
    background-color $lime
    border 1px solid #bbb
    color #222
    .subscribed
      display block

  &.stop-state
    background-color white
    .stopped
      display block

  .search-query
    font-weight bold

#services
  border 1px solid #ddd
  overflow hidden

  >div
    padding 0em 1em

  #twitter-service
    background-color lightblue
    max-height 0
    -webkit-transition max-height 1s
    -webkit-transition padding 0.5s
    
    &:target 
      max-height 100px
      padding 1em 

  .unauth 
    display none
  .auth
    display none

  .unauth-state
    .unauth
      display block
  
  .auth-state
    .auth
      display: block

.hidden
  display none
.shown
  display block

#listening
  display none